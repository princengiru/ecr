#+PHPVersion
#="php80"
AddHandler x-httpd-php80 .php
#-PHPVersion

# Enable mod_rewrite
RewriteEngine On

# Hide .php extension
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

# Hide .html extension
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# Optional: Redirect from .php and .html to clean URLs
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Redirect narazasupport.rw to the support_site subdirectory
RewriteEngine On
RewriteCond %{HTTP_HOST} ^(www\.)?narazasupport\.rw$ [NC]
RewriteCond %{REQUEST_URI} !^/support_site/
RewriteRule ^(.*)$ /support_site/$1 [L]





